<%= form_for(@service, :html => { class: "form-horizontal" }) do |f| %>
  <% if @service.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h2>
    <ul>
    <% @service.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-md-2" %>
    <div class="col-md-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :public, "Advertise publicly?", class: "col-md-2" %>
    <div class="col-md-10">
      <%= f.check_box :public %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :url, class: "col-md-2" %>
    <div class="col-md-10">
      <%= f.text_field :url, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :logo_url, class: "col-md-2" %>
    <div class="col-md-10">
      <%= f.text_field :logo_url, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-md-2" %>
    <div class="col-md-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :authentication_token, "Illyan API key", class: "col-md-2" %>
    <div class="col-md-10">
      <%= f.text_field :authentication_token, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-2"></div>
    <div class="col-md-10">
      <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>
