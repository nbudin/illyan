<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Services</h3>
  </div>
  
  <div class="table-responsive">
    <table class="table table-striped table-condensed table-responsive">
      <thead>
        <tr>
          <th>Name</th>
          <th>Url</th>
          <th>Logo</th>
          <th>Description</th>
          <th>Illyan API key</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @services.each do |service| %>
          <tr>
            <td><%= service.name %></td>
            <td><%= service.url %></td>
            <td><%= image_tag service.logo_url unless service.logo_url.blank? %></td>
            <td><%= truncate service.description %></td>
            <td><%= service.authentication_token %></td>
            <td><%= link_to 'Edit', edit_service_path(service), :class => "btn btn-default btn-sm" %></td>
            <td><%= link_to 'Destroy', service, :method => :delete, :confirm => 'Are you sure?', :class => "btn btn-danger btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="panel-body">
    <div>
      <%= link_to 'New Service', new_service_path, :class => "btn btn-primary" %>
    </div>
  </div>
</div>