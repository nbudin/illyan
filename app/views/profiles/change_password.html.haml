= error_messages_for :person
.panel.panel-primary
  .panel-heading
    %h2.panel-title Change your password
  .panel-body
    = form_for @person, :url => profile_path, :html => { :class => "form-horizontal" } do |f|
      .form-group
        = f.label :password, "New password", :class => "col-md-2"
        .col-md-10
          = f.password_field :password, class: "form-control"
      .form-group
        = f.label :password_confirmation, "Again to confirm", :class => "col-md-2"
        .col-md-10
          = f.password_field :password_confirmation, class: "form-control"
      .form-group
        .col-md-2
        .col-md-10= f.submit "Change password", :class => "btn btn-primary btn-lg"
