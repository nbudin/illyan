<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= @person.name %></dd>

  <dt>Gender</dt> 
  <dd><%= @person.gender %></dd>

  <dt>Age</dt>
  <dd>
    <% if @person.current_age -%>
      <%= @person.current_age %> (born <%= @person.birthdate.strftime("%Y-%m-%d") %>)
    <% end -%>
  </dd>

  <dt>Email</dt>
  <dd><%= mail_to @person.email %></dd>
</dl>