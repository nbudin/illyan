.form-group
  = f.label :firstname, "First name", class: "col-md-2"
  .col-md-10
    = f.text_field "firstname", class: "form-control"
.form-group
  = f.label :lastname, "Last name", class: "col-md-2"
  .col-md-10
    = f.text_field "lastname", class: "form-control"
.form-group
  = f.label :birthdate, "Date of birth", class: "col-md-2"
  .col-md-10
    = f.date_select "birthdate", {:include_blank => true, :start_year => Date.today.year, :end_year => 1900, :order => [:month, :day, :year]}, {:class => "form-control"}
.form-group
  = f.label :gender, class: "col-md-2"
  .col-md-10
    = f.text_field "gender", class: "form-control"
