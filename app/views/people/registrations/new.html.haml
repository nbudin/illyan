.panel.panel-primary
  .panel-heading
    %h2.panel-title Sign up
  .panel-body
    = form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" } do |f|
      - if resource.errors.present?
        .alert.alert-danger{style: 'text-align: left'}
          %h3 Sorry, there were some errors processing your form:
          %ul
            - resource.errors.to_a.each do |msg|
              %li= msg
      %h3 Login Information
      .form-group
        = f.label :email, class: "col-md-2"
        .col-md-10
          = f.email_field :email, class: "form-control"
      .form-group
        = f.label :password, class: "col-md-2"
        .col-md-10
          = f.password_field :password, class: "form-control"
      .form-group
        = f.label :password_confirmation, "Confirm password", class: "col-md-2"
        .col-md-10
          = f.password_field :password_confirmation, class: "form-control"
      %h3 Profile
      = render :partial => "profiles/personal_info", :locals => {:f => f}
      .form-group
        .col-md-2
        .col-md-10= f.submit "Sign up", class: "btn btn-primary btn-lg"
    = render :partial => "devise/shared/links"
