<%= error_messages_for :person %>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h2 class="panel-title">Change <%= @person.name %>'s password</h2>
  </div>
  
  <div class="panel-body">
    <%= form_for [:admin, @person], :html => { :class => "form-horizontal" } do |f| -%>
  
      <div class="form-group">
        <%= f.label :password, "New password", :class => "col-md-2" %>
        <div class="col-md-10">
          <%= f.password_field :password, :class => "form-control" %>
        </div>
      </div>
    
      <div class="form-group">
        <%= f.label :password_confirmation, "Again to confirm", :class => "col-md-2" %>
        <div class="col-md-10">
          <%= f.password_field :password_confirmation, :class => "form-control" %>
        </div>
      </div>
  
      <div class="form-group">
        <div class="col-md-2"></div>
        <div class="col-md-10">
          <%= f.submit "Change password", :class => "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end -%>
  </div>
</div>