<%= form_tag admin_people_path, method: 'get' do %>
  <%= text_field_tag :q, params[:q] %>
  <%= submit_tag "Search", class: "inline" %>
  <% if params[:q].present? -%>
    <%= link_to "Clear search", admin_people_path %>
  <% end -%>
<% end %>

<table>
  <thead>
	  <tr>
		  <th>Name</th>
		  <th>Email</th>
	  </tr>
	</thead>
	<tbody>
  	<% @people.each do |person| -%>
  		<tr>
  			<td><%= link_to person.inverted_name, admin_person_path(person) %></td>
  			<td><%= person.email %></td>
  		</tr>
  	<% end -%>
  </tbody>
</table>

<%= will_paginate @people %>

<p><%= link_to "Create new person", new_admin_person_path %></p>