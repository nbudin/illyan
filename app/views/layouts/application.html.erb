<!DOCTYPE html>
<html>
<head>
  <title><%= page_title %></title>
  <%= stylesheet_link_tag 'application' %>
  <%= theme_stylesheet_link_tag %>
  <%= javascript_include_tag "jquery-1.4.1.min"%>
  <%= javascript_include_tag "rails" %>
  <%= javascript_include_tag "application"%>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="top">  
  	<% if flash[:notice] %>
  	  <div class="notice">
  	    <%= flash[:notice] %>
  	  </div>
  	<% end %>

  	<% if flash[:alert] %>
      <div class="alert">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= nav_bar :application %>

    <div id="banner">
      <%= site_banner%>
    </div>
  </div>

  <div id="content">
    <%= yield %>
  </div>

</body>
</html>
