<%= form_tag "/cas/login" do %>
  <p>
    <%= label_tag :username, Cassy.config[:username_label] || 'Username' %>
    <%= text_field_tag :username %>
  </p>
  
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  
  <%= hidden_field_tag :lt, @lt %>
  <%= hidden_field_tag :service, @service %>
  
  <%= submit_tag "Login" %>
<% end %>